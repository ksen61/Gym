<Window x:Class="Gym.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid Margin="20" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин:" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" Margin="0,20"/>
        <TextBox x:Name="LoginBox" FontSize="20" Padding="15" MinWidth="250" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="0,20"/>

        <TextBlock Text="Пароль:" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Margin="0,20"/>
        <PasswordBox x:Name="PasswordBox" FontSize="20" Padding="15" MinWidth="250" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" Margin="0,20"/>

        <Button Content="Войти" FontSize="20" Click="LoginButton_Click" Width="200" HorizontalAlignment="Center" Padding="15" Grid.Row="4" Grid.Column="1" Margin="0,20"/>
    </Grid>
</Window>