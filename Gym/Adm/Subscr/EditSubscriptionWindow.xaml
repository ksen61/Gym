<Window x:Class="Gym.EditSubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование абонемента" WindowState="Maximized">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Редактирование абонемента" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Тип абонемента:" FontSize="20" Margin="0,0,0,5"/>
            <TextBox x:Name="TypeTextBox" FontSize="20" Margin="0,0,0,15" MinWidth="200"/>

            <TextBlock Text="Цена:" FontSize="20" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" FontSize="20" Margin="0,0,0,15" MinWidth="200"/>

            <TextBlock Text="Максимальное количество участников:" FontSize="20" Margin="0,0,0,5"/>
            <TextBox x:Name="MaxParticipantsTextBox" FontSize="20" Margin="0,0,0,15" MinWidth="200"/>

            <TextBlock Text="Зарегистрированные клиенты:" FontSize="20" Margin="0,0,0,5"/>
            <TextBox x:Name="RegisteredClientsTextBox" FontSize="20" Margin="0,0,0,15" MinWidth="200"/>

            <TextBlock Text="Дополнительные услуги:" FontSize="20" Margin="0,0,0,5"/>
            <TextBox x:Name="AvailableServicesTextBox" FontSize="20" Margin="0,0,0,15" MinWidth="200"/>

            <TextBlock Text="Длительность (дни):" FontSize="20" Margin="0,0,0,5"/>
            <TextBox x:Name="DurationDaysTextBox" FontSize="20" Margin="0,0,0,15" MinWidth="200"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Сохранить" Width="200" Height="45" FontSize="20" Margin="10,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Отмена"  Width="200" Height="45" FontSize="20" Margin="10,0,10,0" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>